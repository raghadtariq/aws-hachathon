[Unit]
Description=Simple App Service
After=syslog.target
After=network.target

[Service]
AmbientCapabilities=CAP_NET_BIND_SERVICE
Type=simple
User=app
Group=app
WorkingDirectory=/home/app/app
ExecStart=/usr/bin/node ./dist/index.js
Restart=always
Environment=PORT=80

[Install]
WantedBy=multi-user.target